{
  "name": "vtqnm/bxbp",
  "description": "Tools for Bitrix module boilerplate",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "vtqnm",
      "email": "vtqnm0@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "symfony/console": "^6.4",
    "symfony/filesystem": "^6.4",
    "laravel/prompts": "^0.3.4",
    "symfony/polyfill-mbstring": "^1.33"
  },
  "autoload": {
    "psr-4": {
      "Vtqnm\\Bxbp\\": "src/"
    }
  },
  "require-dev": {
    "pestphp/pest": "^2.36"
  },
  "autoload-dev": {
    "psr-4": {
      "Vtqnm\\Bxbp\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/bxbp"
  ],
  "keywords": ["cli", "bitrix", "module", "boilerplate", "tool"],
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
